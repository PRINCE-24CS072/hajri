# PaddleOCR-VL API Configuration
# Get credentials from: https://aistudio.baidu.com/paddleocr/task

PADDLEOCR_VL_API_URL=your_api_url_here
PADDLEOCR_VL_API_TOKEN=your_token_here

# Environment
# - Leave ENV empty for local/dev
# - Set ENV=production on your hosted deployment
ENV=

# App API Auth (recommended)
# React Native should send: X-API-Key: <APP_API_KEY>
# Generate locally: python -c "import secrets; print(secrets.token_urlsafe(48))"
APP_API_KEY=

# Debug UI / Docs flags
# - Set ENABLE_DEBUG_UI=false on public deployments unless you really need it
ENABLE_DEBUG_UI=true
ENABLE_DOCS=true

# Debug Admin Auth (browser-friendly)
# When ENABLE_DEBUG_UI=true, you should set these so /debug.html is protected.
ADMIN_COOKIE_SECRET=
ADMIN_USERS_JSON={"hajri":"StrongPass1!","admin2":"AnotherStrongPass2!"}

# Optional: header-based admin access (Postman/curl)
DEBUG_ADMIN_KEY=

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=True

# OCR Settings
CONFIDENCE_THRESHOLD=0.70
MAX_IMAGE_SIZE_MB=10

# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=info
